@model denizdikbiyik_CET322_FinalProject.Models.Sales

@{
    ViewData["Title"] = "Bilgiler";
}

<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jodit/3.1.92/jodit.min.css">
<script src="//cdnjs.cloudflare.com/ajax/libs/jodit/3.1.92/jodit.min.js"></script>

<section class="ab-info-main py-md-5">
    <div class="container py-md-3">

        <h1>Satın Al</h1>

        <p>Kargo ücretsizdir. Ürünün ödemesi kapıda kart veya nakit ödeme seçenekleri ile gerçekleştirilebilecektir.</p>
        <hr />
        <div class="row">
            <div class="col-md-8 address_form">
                <h4>Fatura Bilgileri</h4>
                <form asp-action="AddToSales">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CargoAddress" class="control-label">Kargo Adresi</label>
                        <input asp-for="CargoAddress" class="form-control" />
                        <span asp-validation-for="CargoAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ContactTelNo" class="control-label">İletişim Telefon Numarası</label>
                        <input asp-for="ContactTelNo" class="form-control" />
                        <span asp-validation-for="ContactTelNo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Devam Et" class="btn btn-primary"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}