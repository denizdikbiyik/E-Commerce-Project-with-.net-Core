@model IEnumerable<denizdikbiyik_CET322_FinalProject.Models.Sales>

@{
    ViewData["Title"] = "Satın Al";
}

<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jodit/3.1.92/jodit.min.css">
<script src="//cdnjs.cloudflare.com/ajax/libs/jodit/3.1.92/jodit.min.js"></script>

<section class="ab-info-main py-md-5">
    <div class="container py-md-3">
        <h1>Satın Alınan</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Satış Numarası
                    </th>
                    <th>
                        Kargo Adresi
                    </th>
                    <th>
                        İletişim Telefon Numarası
                    </th>
                    <th>
                        Satın Alınan Tarih
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SalesId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CargoAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactTelNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SaledDate)
                    </td>                   
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.SalesId">Düzenle</a> |
                        <a asp-action="Delete" asp-route-id="@item.SalesId">İptal Et</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        var editor = new Jodit('#ProductContent');
    </script>
}
