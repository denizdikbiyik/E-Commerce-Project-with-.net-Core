@model IEnumerable<denizdikbiyik_CET322_FinalProject.ViewModels.UserModel>
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
    Layout = "_AdminLayout";
}
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jodit/3.1.92/jodit.min.css">
<script src="//cdnjs.cloudflare.com/ajax/libs/jodit/3.1.92/jodit.min.js"></script>

<section class="ab-info-main py-md-5">
    <div class="container py-md-3">
        <br/>
        <h1>Kullanıcı Yönetimi</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Kullanıcı Adı
                    </th>
                    <th>
                        Ad Soyad
                    </th>
                    <th>
                        Admin Mi?
                    </th>
                    <th>
                        Admin Yap-Kaldır
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserFullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserIsAdmin)
                        </td>
                        <td>
                            @if (item.UserIsAdmin)
                            {
                                <a asp-action="RemoveAdmin" asp-route-id="@item.UserId" class="btn btn-danger">Yöneticilikten Çıkar</a>
                            }
                            else
                            {
                                <a asp-action="MakeAdmin" asp-route-id="@item.UserId" class="btn btn-primary">Yönetici Yap</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>

    </script>
}